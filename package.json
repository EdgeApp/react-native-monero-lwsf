  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "eslint": "^9.39.1",
    "eslint-config-standard-kit": "^1.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "sucrase": "^3.35.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cleaners": "^0.3.17"
  }
