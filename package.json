{
  "name": "react-native-monero-lwsf",
  "version": "0.1.0",
  "description": "React Native bindings for the monero-lwsf library",
  "homepage": "https://github.com/EdgeApp/react-native-monero-lwsf",
  "repository": {
    "type": "git",
    "url": "git@github.com:EdgeApp/react-native-monero-lwsf.git"
  },
  "license": "BSD-3-Clause",
  "author": "Airbitz, Inc.",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "files": [
    "/android/build.gradle",
    "/android/src/",
    "/CHANGELOG.md",
    "/ios/",
    "/lib/src/",
    "/package.json",
    "/react-native-monero-lwsf.podspec",
    "/README.md",
    "/src/monero-wrapper/monero-methods.hpp"
  ],
  "lint-staged": {
    "*.{js,ts}": "eslint"
